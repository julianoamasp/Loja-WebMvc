@{
    ViewData["Title"] = "Home";
    ViewData["tags"] = "Loja, Loja exemplo, loja exemplo C sharp, loja exemplo C#";
    ViewData["desc"] = "Loja exemplo desenvolvida em C#, este site não efetua nenhum tipo de venda";
}

<div class="slider-area">
    <!-- Slider -->
    <div class="block-slider block-slider4">
        <ul class="" id="bxslider-home4">

            @foreach (Banners banner in ViewBag.banners)
            {
                <li>
                    <img src="img/banners/@banner.BannersImagem1" alt="Slide">
                    <div class="caption-group">
                        <h2 class="caption title">
                            @banner.BannersTitulo1 <span class="primary"><strong>@banner.BannersSubTitulo1</strong></span>
                        </h2>
                        <h4 class="caption subtitle">@banner.BannersDescricao1</h4>
                        <a class="caption button-radius" href="@banner.BannersLink1"><span class="icon"></span>Vizualizar</a>
                    </div>
                </li>
            }

        </ul>
    </div>
    <!-- ./Slider -->
</div> <!-- End slider area -->





<div class="maincontent-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="latest-product">
                    <h2 class="section-title">Ultimos Produtos</h2>
                    <div class="product-carousel">


                        @foreach (Produtos produto in ViewBag.produtos)
                        {
                            <div class="single-product">
                                <div class="product-f-image">
                                    <img src="img/produtos/@produto.ProdutoId/@produto.ProdutoThumb" alt="">
                                    <div class="product-hover">
                                        <a href="#" class="add-to-cart-link"><i class="fa fa-shopping-cart"></i> Adicionar</a>
                                        <a href="single-product.html" class="view-details-link"><i class="fa fa-link"></i> Detalhes</a>
                                    </div>
                                </div>

                                <h2><a href="/produto/@produto.ProdutoId/@produto.ProdutoPermalink">@produto.ProdutoTitulo</a></h2>

                                <div class="product-carousel-price">
                                    @if (produto.ProdutoTitulo != "")
                                    {
                                        <ins>
                                            R$ @(produto.ProdutoPreco - ((produto.ProdutoPreco / 100) * produto.ProdutoDesconto))
                                        </ins>
                                    }
                                        <del>R$ @produto.ProdutoPreco</del>

                                    </div>

</div>
                        }

                        </div>
                </div>
            </div>
        </div>
    </div>
</div> <!-- End main content area -->